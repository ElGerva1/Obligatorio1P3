@model ComiteCompartido.Dtos.Eventos.EventoAltaDto

@{
    ViewData["Title"] = "Create";
}

<h3>Crear un nuevo evento</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inicio" class="control-label"></label>
                <input asp-for="Inicio" class="form-control" />
                <span asp-validation-for="Inicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fin" class="control-label"></label>
                <input asp-for="Fin" class="form-control" />
                <span asp-validation-for="Fin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DisciplinaId" class="control-label">Seleccione una Disciplina</label>
                <select name="DisciplinaId" class="form-control">
                    @foreach (var disciplina in ViewBag.Disciplinas)
                    {
                        <option value="@disciplina.Id">
                            @disciplina.Nombre
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Atletas" class="control-label">Seleccione al menos 3 atletas</label>
                <select name="AtletasIds" class="form-control" multiple>
                    @foreach (var atleta in ViewBag.Atletas)
                    {
                        <option value="@atleta.id">
                            @atleta.Nombre
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
